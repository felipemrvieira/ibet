<%= form_with(model: bet, local: true) do |form| %>
  <% if bet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bet.errors.count, "error") %> prohibited this bet from being saved:</h2>

      <ul>
      <% bet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :time %>
    <%= form.time_select :time %>
  </div>

  <div class="field">
    <%= form.label :bettor_id %>
    <%= collection_select(
      :bet, 
      :bettor_id,
      Bettor.all, 
      :id, 
      :nickname,
      :prompt => true
    ) %>
  </div>

  <div class="field">
  <%= form.label :game_id %>
  <%= collection_select(
    :bet, 
    :game_id,
    Game.all, 
    :id, 
    :date,
    :prompt => true
  ) %>
  </div>




  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
